@page "/Materials/Index"

<PageTitle>Materials | Index</PageTitle>

<FluentSpacer Width="4" />

<FluentStack HorizontalAlignment="HorizontalAlignment.SpaceBetween"
             Orientation="Orientation.Horizontal">
    <FluentLabel Color="Color.Accent" Typo="Typography.PageTitle">Materials</FluentLabel>
    <FluentDivider />
    <FluentTextField></FluentTextField>
    <FluentDivider />
    <FluentButton Name="Mode" Title="View Mode"/>
</FluentStack>

<FluentSpacer Width="1" />
<FluentDivider />
<FluentSpacer Width="4" />

<FluentGrid Spacing="1">
    @if (Items is null)
    {
        <FluentGridItem sm="12">
            <MaterialListViewComponent Content="There are no content here"
                               LastModification="DateTime.UtcNow"
                               Status="Empty"
                               Username="Anonymous" />
        </FluentGridItem>
    }
    else
    {
        foreach (Item item in Items)
        {

            <FluentGridItem sm="12">
                <MaterialListViewComponent Content="@item.Name"
                                   LastModification="DateTime.UtcNow"
                                   Status="Empty"
                                   Username="Anonymous" />
            </FluentGridItem>

        }
    }
</FluentGrid>
